@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h3>Бібліотека</h3>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <td><p>Назва книги</p></td>
            <td><p>Автор</p></td>
            <td><p>Цiна</p></td>
            <td></td>
        </tr>
        @foreach (var b in ViewBag.Books)
        {
            <tr>
                <td><p>@b.Name</p></td>
                <td><p>@b.Author</p></td>
                <td><p>@b.Price</p></td>
                <td><p><a href="/Home/Buy/@b.Id">Купити</a></p>
                <p><a href="/Home/EditBook/@b.Id">Редагувати</a></p>
                <p><a href="/Home/BookView/@b.Id">Перегляд</a></p>
                <p><a href="/Home/Delete/@b.Id">Видалити</a></p></td>
            </tr>
        }
    </table>
</div>